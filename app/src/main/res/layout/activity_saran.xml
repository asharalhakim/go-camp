<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    android:background="@drawable/bg3"
    tools:context=".SaranActivity">

    <LinearLayout
        android:id="@+id/linearLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/ic_kembali_kontakprofil"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_kembali"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/TVprofil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_nav_menu"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/carter_one"
                android:text="Kontak Kami"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_logo"
                    android:layout_marginTop="1dp"
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="120dp"
                    android:src="@drawable/logo12"/>

                <LinearLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-40dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="17dp"
                    android:paddingVertical="12dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/splash">

                    <TextView
                        android:id="@+id/TVKkirimsaran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Kirim Saran"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/TVKsilahkan"
                        android:layout_width="290dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/poppins"
                        android:text="Silahkan kirimkan pendapat anda mengenai aplikasi ini"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/ETkontak_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/edit_text_bg"
                        android:drawableLeft="@drawable/ic_user"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/poppins"
                        android:hint="Nama Pengguna"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="10dp"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/ETnim_saran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_bg"
                        android:drawableLeft="@drawable/ic_nim"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/poppins"
                        android:hint="NIK"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="10dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/ETkontak_saran"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_bg"
                        android:drawableLeft="@drawable/ic_saran"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/poppins"
                        android:hint="Saran"
                        android:maxLength="80"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="10dp"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/BTNkontak_kirim"
                        android:layout_width="match_parent"
                        android:layout_height="43dp"
                        android:backgroundTint="@color/yellow"
                        android:text="Kirim Pesan"
                        android:textAllCaps="false"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:elevation="2dp"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kontak lainnya:"
                    android:layout_marginTop="70dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/poppins"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/ic_whatsapp"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginHorizontal="13dp"
                        app:srcCompat="@drawable/ic_whatsapp" />

                    <ImageView
                        android:id="@+id/ic_google"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginHorizontal="13dp"
                        app:srcCompat="@drawable/ic_google" />

                    <ImageView
                        android:id="@+id/ic_instagram"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginHorizontal="13dp"
                        app:srcCompat="@drawable/ic_instagram" />
                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/bg_nav">

        <include layout="@layout/main_nav_drawer" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>