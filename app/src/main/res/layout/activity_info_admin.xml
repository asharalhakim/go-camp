<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout1"
    android:background="@drawable/bg6"
    tools:context=".InfoAdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                layout="@layout/main_toolbar"/>

            <TextView
                android:id="@+id/TVprofil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_nav_menu"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/carter_one"
                android:layout_marginLeft="25dp"
                android:text="Info"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_logo"
            android:layout_marginTop="-65dp"
            android:layout_width="150dp"
            android:layout_height="260dp"
            android:layout_marginLeft="120dp"
            android:src="@drawable/logo12"/>

        <LinearLayout
            android:id="@+id/constraintLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/splash"
            android:layout_marginTop="-45dp"
            android:padding="10dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/TVKkirimsaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Aplikasi GoCamp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textColor="@color/color2"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/TVKsilahkan"
                android:paddingHorizontal="23dp"
                android:paddingVertical="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/descslide5"
                android:textAlignment="center"
                android:textSize="13dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="30dp"
                    android:paddingVertical="6dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:background="@drawable/splash"
                    android:layout_gravity="center_horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/pic_falaji"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/ashar"
                        app:civ_border_color="#fee440"
                        app:civ_border_width="4dp">

                    </de.hdodenhof.circleimageview.CircleImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/pic_falaji"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="M. Ashar Al-Hakim"
                            android:textSize="14dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="50dp"
                            android:fontFamily="@font/poppins"
                            android:text="42520041"
                            android:layout_marginTop="-4dp"
                            android:textSize="12dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/constraintLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="30dp"
                    android:paddingVertical="6dp"
                    android:paddingLeft="20dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/splash"
                    android:layout_gravity="center_horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/pic_tenri"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/caca"
                        app:civ_border_color="#fee440"
                        app:civ_border_width="4dp">

                    </de.hdodenhof.circleimageview.CircleImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/pic_tenri"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Nurul Azizah"
                            android:textSize="14dp">
                        </TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-4dp"
                            android:fontFamily="@font/poppins"
                            android:text="42520041"
                            android:textSize="12dp">
                        </TextView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/bg_nav">

        <include layout="@layout/main_nav_drawer1" />

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>